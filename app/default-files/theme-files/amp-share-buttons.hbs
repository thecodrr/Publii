{{#if @amp.shareSystem}}
    <amp-social-share
            type="system"
            width="40"
            height="40"
            data-param-text="{{title}}">
    </amp-social-share>
{{/if}}

{{#if @amp.shareFacebook}}
    <amp-social-share
            type="facebook"
            width="40"
            height="40"
            data-param-app_id="{{@amp.shareFacebookId}}"
            data-param-text="{{title}}"
            data-param-href="{{url}}">
    </amp-social-share>
{{/if}}

